            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.prix }}</td>
                <td>{{ ticket.nom }}</td>
                <td>
                    <a href="{{ path('ticket_show', {'id': ticket.id}) }}">afficher</a>
