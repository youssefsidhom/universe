{% extends 'base-front.html.twig' %}
{% block title %}MyCoach
{% endblock %}


{% block hero%} {% endblock %}

{% block about %}{% endblock %}

{% block prog %}{% endblock %}

{% block coach %}{% endblock %}

{% block contact %}{% endblock %}


{% block body %}


    <section class="class section" id="class">

        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-12 text-center">

                <h1>Evénements</h1>


                {{ form_start(form) }}

                <div class="form-row align-items-end" >
                <div class="col">
                {{ form_row(form.nom) }}
                    </div>

                    <div class="col">
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Rechercher</button>
                        </div>
                    </div>
                    </div>
                {{ form_end(form) }}
                {% for message in app.flashes('info')%}
<div class="alert alert-danger">
{{message}}
</div>
  {% endfor %}
  
  
                <table class="table table-bordered table-responsive schedule-table" data-aos="fade-up" data-aos-delay="300">
                <thead class="thead-light">
                    <th>Id</th>
                    <th>nom</th>
                    <th>date</th>
                    <th>ticket</th>
                    <th>actions</th>
                </thead>

                <tbody>
                    {% for event in events %}
                        <tr>
                            <td>{{ event.id }}</td>
                            <td>{{ event.nom }}</td>
                            <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
                            <td>{{ event.ticket }}</td>

                            <td>
                                <a href="{{ path('evt_show', {'id': event.id}) }}">Afficher</a>
                                <a href="{{ path('evt_edit', {'id': event.id}) }}">Modifier</a>
                                {{ include('evt/_delete_form.html.twig') }}

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    
                </tbody>
            </table>
                {{ knp_pagination_render(events) }}
                <a href="{{ path('evt_new') }}">Créer un nouveau</a>
                <a href="{{ path('evt_list') }}">Imprimer</a>
                </div>
            </div>
        </div>
    </section>
    
{% endblock %}









